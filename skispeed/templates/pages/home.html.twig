{% extends 'base.html.twig' %}

{% block title  %}'Les meilleures figures de style de snowboard!'
{% endblock %}


{% block body%}
	<div id="Snowboardcarousel" class="carousel slide" data-ride="carousel">

		<ol class="carousel-indicators">
			<li data-target="#Snowboardcarousel" data-slide-to="0" class="active"></li>
			<li data-target="#Snowboardcarousel" data-slide-to="1"></li>
			<li data-target="#Snowboardcarousel" data-slide-to="2"></li>
		</ol>

		<div class="carousel-inner" role="listbox">
			<div class="carousel-item active">
				<img class="d-block w-100" src="{{ asset ('images/snowslide1.jpg')}}" alt="snowboard mute">
				<h1>Entrez dans l'Univers du Freestyle</h1>
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="{{ asset ('images/snowslide2.jpg')}}" alt="snowboard backflip">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="{{ asset ('images/snowslide3.jpg')}}" alt="snowboard backflip">
			</div>

			<a class="carousel-control-next" href="#Snowboardcarousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#Snowboardcarousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>

	<div class="container">
		<div class="row" id="listSkifigure">
			{% for figure in figures %}

				<div class="col-md-4 col-sm-6">
					<div class="card">
						<a href="{{ path('figure_view', {'figure.id': figure.id}) }}">
							{% if figure.frontImage is not null %}
								<img src="{{ asset(figure.frontImage ~ '/' ~ figure.frontImage.name) }}">
							{% else %}
								<img src="{{ asset('images/snowslide1.jpg') }}">
							{% endif %}
							<div class="card-body text-center">
								<h5 class="card-title">
									{{ figure.name }}

									{% if app.user %}

										<a href=" {{ path('figure_edit', {'figure.id': figure.id}) }}">
											<i class="fas fa-pencil-alt"></i>
											<button type="button" class="btn btn-outline-success">Editer</button>
										</a>
										<a href=" {{ path('figure_delete', {'figure.id': figure.id}) }}">
											<i class="fas fa-trash-alt"></i>
											<button type="button" class="btn btn-alert">Supprimer</button>
										</a>
									</div>
								{% endif %}


							</h5>
						</div>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
