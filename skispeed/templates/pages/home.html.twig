{% extends 'base.html.twig' %}

{% block title  %}'Les meilleures figures de style de snowboard!'
{% endblock %}


{% block body%}


	<div id="Snowboardcarousel" class="carousel slide" data-ride="carousel">

		<ol class="carousel-indicators">
			<li data-target="#Snowboardcarousel" data-slide-to="0" class="active"></li>
			<li data-target="#Snowboardcarousel" data-slide-to="1"></li>
			<li data-target="#Snowboardcarousel" data-slide-to="2"></li>
		</ol>

		<div class="carousel-inner" role="listbox">
			<div class="carousel-item active">
				<img class="d-block w-100" src="{{ asset ('images/snowslide1.jpg')}}" alt="snowboard mute">
				<h1>Entrez dans l'Univers du Freestyle</h1>
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="{{ asset ('images/snowslide2.jpg')}}" alt="snowboard backflip">
			</div>

			<div class="carousel-item">
				<img class="d-block w-100" src="{{ asset ('images/snowslide3.jpg')}}" alt="snowboard backflip">
			</div>

			<a class="carousel-control-next" href="#Snowboardcarousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#Snowboardcarousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>


	<div class="container display">
		<div class="row">
			<h4>Voir les figures</h4>
			{% for figure in figures %}
				<div class="col-md-4 col-sm-6">
					<div class="card h-150">
						{{ figure.name }}
						<a href="{{ path('figure_view', {'slug': figure.slug}) }}">
							{% for image in images %}
								<img class="card-img-top" height="150px" src="{{ asset('Images/uploads/') }}">
							{% endfor %}

							{% for video in videos %}
								<a href="#"></a>
							{% endfor %}
						</a>
					</div>
				</div>
			{% endfor %}

			{% if app.user %}
				<h4>Cr√©er une figure</h4>
				<a href=" {{ path ('figure_create') }}">
					<button type="button" class="btn btn-outline-success">Success</button>
				</a>
				<a href=" {{ path ('figure_edit') }}">
					<button type="button" class="btn btn-outline-success">Editer</button>
				</a>
				<a href=" {{ path ('figure_delete') }}">
					<button type="button" class="btn btn-alert">Supprimer</button>
				</a>
			</div>
		</div>
	{% endif %}

{% endblock %}
