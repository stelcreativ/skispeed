		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link rel="stylesheet" href="css/style.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>

			<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
				<a class="navbar-brand" href="{{ path('home')}}">StyleSnowboard</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item active">
							<a class="nav-link" href="/">ACCUEIL
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<!--is_logged-->

						<li class="nav-item">
							<a class="nav-link" href="{{ path('figure_create') }}">CRÃ‰ER UNE FIGURE</a>
						</li>

						<!--not is_logged-->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_register')}}">INSCRIPTION</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_login')}}">CONNECTION</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_logout') }}">DECONNEXION</a>
						</li>
					</ul>

					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="search" placeholder="Recherche" aria-label="Search">
						<button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Envoi</button>
					</form>
				</div>

			</nav>

			{% block body %}{% endblock %}


			<!-- Footer -->
			<footer>
				<div class="container-fluid footer">
					<div class="row">
						<div class="col-12 text-center py-4">
							<a href="#" target="_blank">
								<i class="icon fa-facebook"></i>
							</a>
							<a href="#" target="_blank">
								<i class="icon fa-twitter"></i>
							</a>
							<a href="#" target="_blank">
								<i class="icon fa-instagram"></i>
							</a>
						</div>
					</div>
				</div>
			</footer>

			{% block javascripts %}{% endblock %}
