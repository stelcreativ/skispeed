{% extends 'base.html.twig' %}

{% block title %}Login !
{% endblock %}

{% block body %}

	<div class="container login text-center  mt-4">
		<div class="row">
			<div class="col-lg-12 md-6 sm-6">
				<h1 class="text-uppercase text-center">Login</h1>

				<form action="{{ path('security_login') }}" method="POST">
					<div class="form-group">
						<label for="name">Name</label>
						<input class="form-control" type="text" name="_username" placeholder="Pseudo"/>
					</div>
					<div class="form-group">
						<label for="name">Password</label>
						<input class="form-control" type="password" name="_password" placeholder="Password"/>
					</div>
					<button type="submit" class="btn btn-dark">Send</button>
				</form>

				<span>
					<a href=" {{ path('security_forgot_password') }}">Forgot your password?</a>
				</span>
			</div>
		</div>
	</div>

{% endblock %}
